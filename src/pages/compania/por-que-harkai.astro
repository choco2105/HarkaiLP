<script>
  // Tabs functionality
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons: NodeListOf<HTMLButtonElement> = document.querySelectorAll('.tab-btn');
    const tabPanels: NodeListOf<HTMLElement> = document.querySelectorAll('.tab-panel');
    
    tabButtons.forEach((button: HTMLButtonElement) => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons and panels
        tabButtons.forEach((btn: HTMLButtonElement) => btn.classList.remove('active'));
        tabPanels.forEach((panel: HTMLElement) => panel.classList.remove('active'));
        
        // Add active class to clicked button
        button.classList.add('active');
        
        // Show corresponding panel
        const tabId: string | null = button.getAttribute('data-tab');
        if (tabId) {
          const panel: HTMLElement | null = document.getElementById(tabId);
          if (panel) {
            panel.classList.add('active');
          }
        }
      });
    });
    
    // Simple testimonial slider functionality
    const dots: NodeListOf<HTMLElement> = document.querySelectorAll('.pagination .dot');
    const casos: NodeListOf<HTMLElement> = document.querySelectorAll('.caso');
    let currentSlide: number = 0;
    
    function showSlide(index: number): void {
      // Hide all slides
      casos.forEach((caso: HTMLElement) => {
        caso.style.display = 'none';
      });
      
      // Remove active class from all dots
      dots.forEach((dot: HTMLElement) => {
        dot.classList.remove('active');
      });
      
      // Show current slide and activate dot
      casos[index].style.display = 'block';
      dots[index].classList.add('active');
    }
    
    // Initialize slider
    showSlide(currentSlide);
    
    // Add click event to dots
    dots.forEach((dot: HTMLElement, index: number) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        currentSlide = index;
      });
    });
    
    // Auto-rotate slides every 5 seconds
    setInterval((): void => {
      currentSlide = (currentSlide + 1) % casos.length;
      showSlide(currentSlide);
    }, 5000);
  });
</script>